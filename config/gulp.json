{
  "tasks" : {
    "compileJS" : [
      {
        "name" : "app-JS",
        "src" : "./src/js/**/*.js",
        "dest" : "./public/js/app",
        "enabled" : true
      }
    ],
    "compileCSS" : [
      {
        "name" : "app-CSS",
        "src" : "./src/sass/**/*.scss",
        "dest" : "./public/style",
        "enabled" : true
      }
    ],
    "compileDocs" : [
      {
        "name" : "app-documentation",
        "src" : "./src/js/",
        "dest" : "./docs",
        "enabled" : true
      }
    ]
  }
}
